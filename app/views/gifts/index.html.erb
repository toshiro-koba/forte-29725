<%= render partial: "rooms/navigation_menu" %>
<div class="main__user-profile">
  <%= render partial: "users/user-profile__left", locals: { user: @user } %>
  <div class="user-question-contents">
    <div class="content">
      <div class="index">
        <div class="index__game_tag">
          <span class="bookmark-action-title"><%= "ギフトする" %></span>
        </div>
        <div class="index__triangle"></div>
      </div>
      <div class="room-name">
        <div class="gift-form__space">
          <%= form_with model: [@reciver, @gift], url: user_gifts_path, method: :post, id: 'charge-form', class: 'transaction-form-wrap',local: true do |f|  %>
            <%= render 'shared/error_messages', model: f.object %>
            <div class="gift-form__content">
              <div class='gift-form-text__price-space'>
                <label class="gift-form-text">ギフトする金額</label>
              </div>
              <span><%= f.text_field :price, class:"input-default", id:"postal-code" %></span>
            </div>
            
            <div class="card-info">
              <span>カード情報</span>
            </div>
            <div class="gift-form__content">
              <div class='gift-form-text__card-space'>
                <label class="gift-form-text">カード番号</label>
              </div>
              <span>
                <%= f.text_field :number, class:"input-default", id:"card-number", maxlength:"16" %>
                <div class='available-card'>
                  <%= image_tag 'card-visa.gif', class: 'card-logo'%>
                  <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
                  <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
                  <%= image_tag 'card-amex.gif', class: 'card-logo'%>
                </div>
              </span>
            </div>

            <div class="gift-form__content">
              <div class='gift-form-text__expiration-date-space'>
                <label class="gift-form-text">有効期限</label>
              </div>
              <div class='gift-form_expiration_date__space'>
                <%= f.text_field :exp_month, class:"input-expiration-month", id:"card-exp-month" %>
                <p>月</p>
                <%= f.text_field :exp_year, class:"input-expiration-year", id:"card-exp-year" %>
                <p>年</p>
              </div>
            </div>

            <div class="gift-form__content">
              <div class='gift-form-text__cvc-space'>
                <label class="gift-form-text">セキュリティコード</label>
              </div>
              <span><%= f.text_field :cvc,class:"input-default-cvc", id:"card-cvc", maxlength:"4" %></span>
            </div>

            <div class="confirmation-of-gift__hover-action">
              <span class='confirmation-btn-of-gift__normal'>ギフトを確定</span>
              <span><%= f.submit "ギフトを確定" ,class:"confirmation-btn-of-gift__hover" %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

