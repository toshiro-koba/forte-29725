<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="question-lists">
  <div class="icons-space">
    <%= link_to user_path(visitor) do %>
      <% unless visitor.profile == nil %>
        <% if visitor.profile.image? %>
          <%= image_tag(visitor.profile.image.thumb50.url, class: "question-user-icon")%>
        <% end %>
      <% else %>
        <%= image_tag "question_user_icon.png", class:"question-user-icon" %>
      <% end %>
    <% end %>
  </div>
  <div class="question-message-set">
    <div class="question-user-nickname">
      <%= "#{visitor.nickname}さんが、" %>
      <% case notification.action %>
      <% when 'follow' then %>
        <%= "あなたをフォローしました" %>
      <% when 'gift' then %>
        <%= "あなたにギフトを送りました" %>
      <% when 'like' then %>
        <%= 'あなたの投稿にいいねしました' %>
      <% when 'message' then %>
        <% if Room.find(notification.room_id).messages.size == 1 %>
          <%= 'あなた宛てに質問しました' %>
        <% else %>
          <%= 'あなた宛てに回答しました' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="notification__margin-space">
</div>
