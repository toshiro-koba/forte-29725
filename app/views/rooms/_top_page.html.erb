      <%= image_tag "top-sample-question.png", class: "top-sample-image" %>
   </div>
   <div class="top-question-description__space">
      <div>回答できる</div>
      <%= image_tag "top-sample-answer.png", class: "top-sample-image" %>
   </div>
   <div class="top-question-description__space">
      <div>ギフトできる</div>
      <%= image_tag "top-sample-gift.png", class: "top-sample-image" %>
