<% unless question.messages[0] == nil %>
  <% question.messages.size.times do |i| %>
    <div class="question-lists">
      <div class="icons-space">
        <%= link_to user_path(question.messages[i].user) do %>
          <% unless question.messages[i].user.profile == nil %>
            <% if question.messages[i].user.profile.image? %>
              <%= image_tag(question.messages[i].user.profile.image.thumb50.url, class: "question-user-icon")%>
            <% end %>
          <% else %>
            <% if question.messages.size == 1 %>
              <%= image_tag "question_user_icon.png", class:"question-user-icon" %>
            <% else %>
              <%= image_tag "answer_user_icon.png", class:"answer-user-icon" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="question-message-set">
        <div class="question-user-nickname">
          <%= question.messages[i].user.nickname %>
        </div>
        <div class="question-sentence">
          <% if i == 0 %>
            <div class="question-sentence-Q">
              <i class="fab fa-quora"></i>.
            </div>
          <% else %>
            <div class="question-sentence-A">
              <%= "A." %>
            </div>
          <% end %>
          <div class="question-sentence-message">
            <%= safe_join("#{question.messages[i].content}".split("\n"),tag(:br))%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>