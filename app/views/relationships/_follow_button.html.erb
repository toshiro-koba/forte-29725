<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <div class="unfollow__hover-action">
        <span class='btn__normal unfollow'>フォロー中</span>
        <span><%= f.submit '解除', class: 'unfollow-btn__hover' %></span>
      </div>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <div class="follow__hover-action">
        <span class='follow-btn__normal'>フォロー</span>
        <span><%= f.submit 'フォロー', class: 'follow-btn__hover' %></span>
      </div>
    <% end %>
  <% end %>
<% end %>