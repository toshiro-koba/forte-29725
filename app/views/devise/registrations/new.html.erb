<div class="header-line">
  <header>
    <div class="header-left">
      <%= link_to root_path, class: "link-to__top-page" do %>
        <div class="app-name">Trace</div>
      <% end %>
    </div>
  </header>
</div>

<div class="user-session__space">
  <div class="login__space">
    新規登録
  </div>
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
    <%= devise_error_messages!%>
    <label for="user-nickname", class="email-name__space">ニックネーム</label>
    <%= f.text_field :nickname, autofocus: true, class:"email__space", id:"user-nickname"%>

    <label for="user-email", class="email-name__space">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, class:"email__space", id:"user-email"%>

   

    <label for="user-password", class="email-name__space">パスワード(英数字6文字以上)</label>
    <%= f.password_field :password, autocomplete: "off", class:"email__space", id:"user-password"%>


    <label for="user-password-confirmation", class="email-name__space">パスワード確認</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"email__space", id:"user-password-confirmation"%>

    <div class="login__hover-action">
      <span class='login-btn__normal'>登録する</span>
      <span><%= f.submit "登録する", class: 'login-btn__hover'%></span>
    </div>
  <% end %>

  <div class="sign-up-link__hover-action">
    <%= link_to 'かんたんログイン', testsessions_path, method: :post, class: 'sign-up-link' %>
  </div>
</div>



